# start screen's tab number from 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# in order to source .bash_profile/.bashrc always treat shell as a login shell
shell -$SHELL

# skip the startup message
startup_message off

# restore bash color scheme
term xterm-color

# automatically detach on hangup.
autodetach on

# start with visual bell as default
vbell on
vbell_msg "bell on %t (%n)"

# decorate screen tab bar at the bottom of the screen
caption always "%{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1` %= %H %d-%m-%Y %c"

activity "Activity in %t(%n)"

# set default scrollback
defscrollback 10000

# use normal scrolling
termcapinfo xterm* ti@:te@
